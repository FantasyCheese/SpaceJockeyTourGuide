<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.descinerds.spacejockeytourguide">

    <!--let user record description of images-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <!--normal-->
    <!--vibrate when control recording-->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".JourneyListActivity" />
        <activity android:name=".JourneyDetailActivity" />
        <activity android:name=".RecorderActivity" />
    </application>

</manifest>